<Window x:Class="BajerPLCTagServer.ServerMonitorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BajerPLCTagServer"
        mc:Ignorable="d"
        Title="BAjER server monitor" Height="450" Width="800"
        Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="21"/>
        </Grid.RowDefinitions>
        <TextBox IsReadOnly="true" Name="LogTextBox" TextWrapping="Wrap" FontFamily="Consolas" Grid.Row="1"/>
        <StackPanel Orientation="Horizontal" Margin="10,5,10,5">
            <TextBox Name="ResetDelayInput" Text="100" Width="50" Margin="10,0,0,0"></TextBox>
            <TextBox Name="StepDelayInput" Text="100" Width="50" Margin="10,0,0,0"></TextBox>
            <Button Name="ApplyButton" Content="Apply" Margin="10,0,0,0" Width="51" Click="ApplyButton_Click"></Button>
        </StackPanel>
        <StatusBar  Grid.Row="2" Margin="0,376,0,-355">
            <TextBlock Name="StatusText"></TextBlock>
        </StatusBar>
    </Grid>
</Window>
